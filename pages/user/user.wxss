/* pages/user/user.wxss */
.user{
  background-color: #f7f4f4;
  width: 100%;
  height: 100%;
}
.user-header {
  position: relative;
  height: 160rpx;
  line-height: 100rpx;
  padding:30rpx 30rpx 30rpx 150rpx;
  /* box-sizing: border-box; */
  font-size: 28rpx;
  color: black;
}
.user-header .avatar {
  position: absolute;
  /* left: 30rpx; */
  left: 50%;
  top: 50rpx;
  margin-left: -100rpx;
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  overflow: hidden;
}
.user-header .nickname {
  font-size: 16px;
  position: absolute;
  top: 240rpx;
  left: 50%;
  transform: translateX(-50%);
}

.user-body {
  margin: 60px 15px;
  border-radius: 15rpx;
  border: 1px solid #e0dbdb;
  background-color: #ffffff;
}
.user-body .item {
  display: flex;
  margin: 10px;
  padding: 30rpx;
  border-bottom: 1px solid #f1ecec;
  /* box-sizing: border-box; */
}
.item image {
  height: 50rpx;
  width: 50rpx;
  margin-right: 30rpx;
}
.item .text {
  font-size: 12rpx;
  align-items: center;
  color: black;
}