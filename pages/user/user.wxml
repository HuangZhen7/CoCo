<!-- pages/user/user.wxml -->
<view class="user">
  <view class="user-header">
    <open-data type="userAvatarUrl" class="avatar" />
    <open-data type="userNickName" class="nickname" />
  </view>
  <view class="user-body" bindtap="goDetail" data-name="优惠券">
    <view class="item">
      <image src="../../images/youhui.png" />
      <text>我的优惠</text>
    </view>
    <view class="item" bindtap="goDetail" data-name="电话">
      <image src="../../images/phone.png" />
      <text>153****5678</text>
    </view>
    <view class="item" bindtap="goDetail" data-name="平台">
      <image src="../../images/pingtai.png" />
      <text>平台须知</text>
    </view>
    <view class="item" bindtap="goDetail" data-name="钱包">
      <image src="../../images/money.png" />
      <text>CoCo钱包</text>
    </view>
    <view class="item" bindtap="goDetail" data-name="收货地址">
      <image src="../../images/address.png" />
      <text>我的收获地址</text>
    </view>
  </view>
</view>