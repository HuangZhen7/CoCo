/* pages/order/order.wxss */
page{
  background-color: #f7f4f4;
  width: 100%;
  height: 100%;
}
.order {
  /* background-color: #d4d4d4; */
  margin: 40rpx;
  height: 100%;
}
.orderMsg{
  position: relative;
  border: 1px solid rgb(190, 185, 185);
  border-radius: 20rpx;
  min-height: 400rpx;
  width: 100%;
  background-color: #fff;
}
.orderMsg text {
  display: block;
  font-size: 30rpx;
  color: #b8b8b8;
  text-align:center; 
  line-height: 400rpx;
}
.orderBtn {
  border-radius: 10rpx;
  border: 1px solid #ef7d0d;
  background-color: #ef7d0d;
  width: 100%;
  height: 40px;
  margin-top: 30px;
  color: #fff;
  font-size: 14px;
  line-height: 40px;
}
/*  */
.header-box{
  margin: 10px 18px;
}
.body{
  font-size: 16px;
  margin-top: 15px;
  padding: 10px;
}
.list{
  border: 1px solid #b8b3b3;
  border-radius: 6px;
  background-color: #fff;
  font-size: 14px;
}
.bd-box{
  display: flex;
  flex-flow: nowrap;
  justify-content: space-between;
  align-items: center;
  border:1px solid #b8b3b3;
  border-radius: 4px;
  padding: 5px 10px;
}
.name{
  font-size: 15px;
  margin-bottom: 6px;
}
.detail{
 font-size: 12px;
  color: #a79c9c;
}
.price, .bd-right{
  font-size: 16px
}