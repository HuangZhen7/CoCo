  color:white;
}
.card-box{
  display:flex;
  width:90%;
  height:100px;
  background:#FEF9F4;
  margin: 0 auto;
}
.card-left-bar{
  width:14px;
  padding:20px 14px;
}
.note-card{
  margin-left:20px;
  color:#A2A1A0;
  font-size:12px;
  margin-top:15px
}
.statu-card{
  font-size:12px;
  color:#FF9C35
}
.number-card{
  font-size:28px;
