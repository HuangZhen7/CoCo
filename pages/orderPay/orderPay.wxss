  margin-top:10px
}
/* 订单详情 */
.header-box{
  margin: 10px 18px;
}
.body{
  font-size: 16px;
  margin-top: 15px;
  /* margin-bottom: 5px; */
  padding: 10px;
}
.list{
  border-bottom: 1px solid #b8b3b3;
  border-top: 1px solid #b8b3b3;
  /* border-radius: 6px; */
  /* padding: 10px; */
