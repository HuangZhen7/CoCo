  font-size: 14px;
}
.bd-box{
  display: flex;
  flex-flow: nowrap;
  justify-content: space-between;
  align-items: center;
}
.name{
  font-size: 15px;
  margin-bottom: 6px;
  
}
.detail{
 font-size: 12px;
  color: #a79c9c;
}
.price, .bd-right{
  font-size: 16px
}
.order-sum{
  height:30px;
  padding:10px 15px;
  font-size:16px;
}
.order-sum-number{
  font-size:16px;
  float:right;
  font-weight: bold;
}
.order-info{
  background: white;
  margin-top:10px;
}
.order-info-title{
  font-size:12px;
  color: #a79c9c;
  padding: 14px;
  border-bottom: 1px solid #b8b3b3;
}
.order-info-li{
  color:black;
